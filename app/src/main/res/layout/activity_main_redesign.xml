<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_vector"
        app:layout_constraintVertical_bias="0.35"/>

    <ImageView
        android:id="@+id/rectangle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/background_image"
        app:layout_constraintRight_toRightOf="@+id/background_image"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_1"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_2"
        app:srcCompat="@drawable/ic_rectangle" />
        <ImageView
            android:id="@+id/rectangle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/background_image"
            app:layout_constraintRight_toRightOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/kruglishok_2"
            app:layout_constraintBottom_toBottomOf="@+id/kruglishok_3"
            app:srcCompat="@drawable/ic_rectangle" />
        <ImageView
            android:id="@+id/rectangle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/background_image"
            app:layout_constraintRight_toRightOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/kruglishok_3"
            app:layout_constraintBottom_toBottomOf="@+id/kruglishok_4"
            app:srcCompat="@drawable/ic_rectangle" />

        <ImageView
            android:id="@+id/rectangle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/background_image"
            app:layout_constraintRight_toRightOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/kruglishok_4"
            app:srcCompat="@drawable/ic_rectangle"/>

        <ImageView
            android:id="@+id/rectangle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/background_image"
            app:layout_constraintRight_toRightOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/kruglishok_4"
            app:srcCompat="@drawable/ic_animation_gradient" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Успех!"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_1"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rectangle1"
        app:layout_constraintHorizontal_bias="0.75"/>
    <ImageView
        android:id="@+id/kruglishok_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_kruglishok"
        app:layout_constraintTop_toTopOf="@+id/background_image"
        app:layout_constraintRight_toRightOf="@+id/rectangle1"
        app:layout_constraintLeft_toLeftOf="@+id/rectangle1"/>
    <ImageView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_1"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_1"
        app:layout_constraintLeft_toRightOf="@+id/rectangle1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:srcCompat="@drawable/ic_success"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_2"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rectangle1"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_2"
        app:srcCompat="@drawable/ic_rrt_came" />
    <ImageView
        android:id="@+id/kruglishok_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_kruglishok"
        app:layout_constraintTop_toTopOf="@+id/background_image"
        app:layout_constraintBottom_toBottomOf="@+id/background_image"
        app:layout_constraintRight_toRightOf="@+id/rectangle1"
        app:layout_constraintLeft_toLeftOf="@+id/rectangle1"
        app:layout_constraintVertical_bias="0.33"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="МГОР на месте"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_2"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="@id/rectangle1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_2"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="МГОР в пути"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_3"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rectangle1"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_3"
        app:layout_constraintVertical_bias="0.66" />
    <ImageView
        android:id="@+id/kruglishok_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/background_image"
        app:layout_constraintLeft_toLeftOf="@+id/rectangle1"
        app:layout_constraintRight_toRightOf="@+id/rectangle1"
        app:layout_constraintTop_toTopOf="@+id/background_image"
        app:layout_constraintVertical_bias="0.66"
        app:srcCompat="@drawable/ic_kruglishok" />

    <ImageView
        android:id="@+id/rrt_edet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_3"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="@id/rectangle1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_3"
        app:layout_constraintVertical_bias="0.66"
        app:srcCompat="@drawable/ic_rrt_edet" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_alarm_approved"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_4"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rectangle1"
        app:layout_constraintHorizontal_bias="0.75"/>
    <ImageView
        android:id="@+id/kruglishok_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_kruglishok"
        app:layout_constraintBottom_toBottomOf="@+id/background_image"
        app:layout_constraintRight_toRightOf="@+id/rectangle1"
        app:layout_constraintLeft_toLeftOf="@+id/rectangle1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вызов принят"
        app:layout_constraintTop_toTopOf="@+id/kruglishok_4"
        app:layout_constraintBottom_toBottomOf="@+id/kruglishok_4"
        app:layout_constraintLeft_toRightOf="@id/rectangle1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        />
    <ImageButton
        android:id="@+id/close_button_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_button_animation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle4"
        android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintTop_toBottomOf="@+id/close_button_animation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




    </android.support.constraint.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_activity_top_background"
            android:layout_alignBottom="@+id/view">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/menu_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="ContentDescription"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/profile_icon"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to_application"
                android:textColor="@color/color_tv"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/text_topsecurity"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/text_topsecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_text_topsecurity"
                android:layout_centerInParent="true"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_activity_bottom_background"
            android:layout_alignTop="@id/view">


            <!--<ImageView-->
                <!--android:id="@+id/vniz"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:srcCompat="@drawable/vniz"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginTop="80dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--tools:ignore="ContentDescription"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/operator_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/operator"
                    android:layout_toStartOf="@id/center_of_buttons"
                    android:layout_toLeftOf="@id/center_of_buttons"
                    android:textColor="@color/color_tv"
                    android:paddingLeft="40dp"
                    android:background="@drawable/operator_backg"
                    android:layout_marginLeft="20dp"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"/>
                <View
                    android:id="@+id/center_of_buttons"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    />
                <Button
                    android:id="@+id/ambulance_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ambulance_redesign"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/center_of_buttons"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingRight="40dp"
                    android:textColor="@color/color_tv"
                    android:background="@drawable/ambulance_backg"
                    android:layout_toRightOf="@id/center_of_buttons" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/alert_button_redesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/alert_button" />
</RelativeLayout>
