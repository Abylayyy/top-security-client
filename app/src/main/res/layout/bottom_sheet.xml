<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true"
    app:behavior_hideable="false"
    app:behavior_peekHeight="220dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="30dp"
    android:gravity="center_horizontal"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_radius_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_radius_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radius_label"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_light"
            android:padding="5dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_radius"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#000"/>
        <LinearLayout
            android:background="@drawable/round_cornered_white_bg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <SeekBar
                android:id="@+id/sb_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="29"
                android:progress="15"
                android:maxHeight="3dp"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/custom_thumb" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_place_list_view"
        android:orientation="vertical"
        android:minHeight="200dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_places_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_list_label"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_light"
            android:padding="5dp"
            android:textColor="#000"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_places"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
