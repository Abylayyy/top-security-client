<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.register.usernameFields.UserNameFieldsFragment">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/main_padding_left"
                android:layout_marginRight="@dimen/main_padding_right"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <!-- LastName block -->


                <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditText
                    android:id="@+id/ed_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="@string/placeholder_lastname"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textColor="#EFEFEF"
                    android:textColorHint="#EFEFEF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.239"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="@color/button_background"
                    app:libIZO_setBorderColor="@color/button_background"
                    app:libIZO_setBorderColorError="@color/enter_button_background"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="25dp"
                    app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
                    app:libIZO_setStrokeWidth="2dp" />

                <TextView
                    android:id="@+id/tv_lastname_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/lastname"
                    android:textColor="@color/enter_button_background"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/ed_lastname"/>
                <!-- Username block -->

                <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditText
                    android:id="@+id/ed_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:hint="@string/placeholder_registration_username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textColor="#EFEFEF"
                    android:textColorHint="#EFEFEF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_lastname_error"
                    app:layout_constraintVertical_bias="0.055"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="@color/button_background"
                    app:libIZO_setBorderColor="@color/button_background"
                    app:libIZO_setBorderColorError="@color/enter_button_background"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="25dp"
                    app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
                    app:libIZO_setStrokeWidth="2dp"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/tv_firstname_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/username"
                    android:textColor="@color/enter_button_background"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/ed_firstname" />

                <!--Patronymic-->

                <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditText
                    android:id="@+id/ed_patronymic"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="@string/placeholder_patronymic"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:textColor="#EFEFEF"
                    android:textColorHint="#EFEFEF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_firstname_error"
                    app:layout_constraintVertical_bias="0.07"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="@color/button_background"
                    app:libIZO_setBorderColor="@color/button_background"
                    app:libIZO_setBorderColorError="@color/enter_button_background"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setCornerRadius="25dp"
                    app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
                    app:libIZO_setStrokeWidth="2dp" />

                <TextView
                    android:id="@+id/tv_patronymic_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/patronymic"
                    android:textColor="@color/enter_button_background"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/ed_patronymic"  />

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/login_button_background"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.836" />
            </android.support.constraint.ConstraintLayout>
</FrameLayout>