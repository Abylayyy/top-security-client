<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".domain.MainScreen.AlertActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/krugVPuti">

            <ImageView
                android:elevation="0.5dp"
                android:id="@+id/redAlertBtn"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="120dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/red_alert"
                tools:targetApi="lollipop" />

            <ImageView
                android:id="@+id/cancelAlert"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/redAlertBtn"
                android:layout_centerInParent="true"
                android:layout_marginBottom="-50dp"
                android:elevation="2dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/redAlertBtn"
                app:srcCompat="@drawable/cancel_btn"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cancelAlert"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-20dp"
                android:text="@string/cancel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cancelAlert" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="290dp"
            android:layout_height="325dp"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_vector" />

        <ImageView
            android:id="@+id/mgorVputi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:elevation="1dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/krugPriniat"
            app:layout_constraintEnd_toStartOf="@+id/krugVPuti"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/krugVPuti"
            app:layout_constraintTop_toBottomOf="@+id/krugVPuti"
            app:srcCompat="@drawable/ic_rectangle_gray" />

        <ImageView
            android:id="@+id/acceptedImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/background_image"
            app:layout_constraintRight_toRightOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/krugPriniat"
            app:srcCompat="@drawable/ic_rectangle" />

        <ImageView
            android:id="@+id/successImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/mgorVputi"
            app:layout_constraintEnd_toStartOf="@+id/krugVPuti"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/krugVPuti"
            app:layout_constraintTop_toTopOf="@+id/longRect"
            app:srcCompat="@drawable/ic_rectangle_gray" />

        <ImageView
            android:id="@+id/longRect"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/acceptedImg"
            app:layout_constraintEnd_toStartOf="@+id/background_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/krugUspeh"
            app:srcCompat="@drawable/long_gray" />

        <ImageView
            android:id="@+id/animRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/longRect"
            app:layout_constraintLeft_toLeftOf="@+id/background_image"
            app:layout_constraintRight_toRightOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/krugPriniat"
            app:srcCompat="@drawable/ic_animation_gradient"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:text="Успех!"
            app:layout_constraintBottom_toBottomOf="@+id/krugUspeh"
            app:layout_constraintStart_toEndOf="@+id/krugUspeh"
            app:layout_constraintTop_toTopOf="@+id/krugUspeh" />

        <ImageView
            android:elevation="1dp"
            android:id="@+id/krugUspeh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/background_image"
            app:layout_constraintEnd_toStartOf="@+id/background_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/background_image"
            app:layout_constraintTop_toTopOf="@+id/background_image"
            app:srcCompat="@drawable/ic_kruglishok"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:scaleType="fitCenter"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:tint="#B6B6B6"
            app:layout_constraintBottom_toBottomOf="@+id/krugUspeh"
            app:layout_constraintEnd_toStartOf="@+id/krugUspeh"
            app:layout_constraintTop_toTopOf="@+id/krugUspeh"
            app:srcCompat="@drawable/ic_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="МГОР в пути"
            app:layout_constraintBottom_toBottomOf="@+id/krugVPuti"
            app:layout_constraintEnd_toStartOf="@+id/krugVPuti"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/krugVPuti"
            app:layout_constraintVertical_bias="0.66" />

        <ImageView
            android:id="@+id/krugVPuti"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/background_image"
            app:layout_constraintEnd_toEndOf="@+id/longRect"
            app:layout_constraintStart_toStartOf="@+id/longRect"
            app:layout_constraintTop_toTopOf="@+id/background_image"
            app:layout_constraintVertical_bias="0.66"
            app:srcCompat="@drawable/ic_kruglishok"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/rrt_edet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:tint="#B6B6B6"
            app:layout_constraintBottom_toBottomOf="@+id/krugVPuti"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/krugVPuti"
            app:layout_constraintTop_toTopOf="@+id/krugVPuti"
            app:layout_constraintVertical_bias="0.66"
            app:srcCompat="@drawable/ic_rrt_edet"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/priniatImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:scaleType="fitCenter"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:tint="#B6B6B6"
            app:layout_constraintBottom_toBottomOf="@+id/krugPriniat"
            app:layout_constraintEnd_toStartOf="@+id/krugPriniat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/krugPriniat"
            app:srcCompat="@drawable/ic_alarm_approved" />

        <ImageView
            android:id="@+id/krugPriniat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/background_image"
            app:layout_constraintEnd_toStartOf="@+id/background_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/background_image"
            app:layout_constraintTop_toBottomOf="@+id/background_image"
            app:srcCompat="@drawable/ic_kruglishok"
            tools:targetApi="lollipop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:text="Вызов принят"
            app:layout_constraintBottom_toBottomOf="@+id/krugPriniat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/krugPriniat"
            app:layout_constraintTop_toTopOf="@+id/krugPriniat" />


    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/alertBtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:elevation="6dp"
        android:onClick="onClick"
        android:visibility="visible"
        app:srcCompat="@drawable/alert_button"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".domain.MainScreen.AlertActivity"
        tools:targetApi="lollipop">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/topConstLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#212121">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="250dp"
                android:layout_height="19dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/logo_text_popup" />

            <RelativeLayout
                android:id="@+id/profImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/pr"
                    android:layout_width="25dp"
                    android:layout_height="21dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/profile_popup" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pokupkaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/pokupka"
                    android:layout_width="27dp"
                    android:layout_height="21dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:tint="#737373"
                    app:srcCompat="@drawable/menu" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:text="*Для активации тревожной кнопки необходимо преобрести подписку"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="Добро пожаловать в мобильное приложение"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottomConstLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_popup_back"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="45dp"
                android:layout_height="100dp"
                android:layout_marginTop="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/vniz" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/popup_call_back"
                android:divider="#121212"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7">

                <RelativeLayout
                    android:id="@+id/callPopup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="onClick">

                    <ImageView
                        android:id="@+id/callImage"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/phone_call_icon" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/callImage"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="1dp"
                        android:text="Оператор"
                        android:textColor="#9E9E9E"
                        android:textSize="13sp" />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#121212" />

                <RelativeLayout
                    android:id="@+id/skoryiPopup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="onClick">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@drawable/add_icon" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/imageView6"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="50dp"
                        android:text="Скорая"
                        android:textColor="#9E9E9E"
                        android:textSize="13sp" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>