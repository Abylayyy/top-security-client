<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.register.signUpFields.RegisterSignFieldsFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/register_sign_fields_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_padding_left"
        android:layout_marginRight="@dimen/main_padding_right"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditTextWithPhoneMask
            android:id="@+id/ed_tel_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#EFEFEF"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13"
            app:libIZO_clearIconTint="#8f1f15"
            app:libIZO_setBackgroundColor="@color/button_background"
            app:libIZO_setBorderColor="@color/button_background"
            app:libIZO_setBorderColorError="@color/enter_button_background"
            app:libIZO_setBorderView="true"
            app:libIZO_setCornerRadius="25dp"
            app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
            app:libIZO_setStrokeWidth="2dp"
            app:mask="+7(###)###-##-##" />

        <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditText
            android:id="@+id/ed_num_hide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Номер телефона *"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#EFEFEF"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13"
            app:libIZO_clearIconTint="#8f1f15"
            app:libIZO_setBackgroundColor="@color/button_background"
            app:libIZO_setBorderColor="@color/button_background"
            app:libIZO_setBorderColorError="@color/enter_button_background"
            app:libIZO_setBorderView="true"
            app:libIZO_setCornerRadius="25dp"
            app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
            app:libIZO_setStrokeWidth="2dp"
            app:mask="+7(###)###-##-##" />

        <TextView
            android:id="@+id/tv_phone_number_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/telephone_number"
            android:textColor="@color/enter_button_background"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_tel_number" />

        <!-- Password block -->

        <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Пароль *"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#EFEFEF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_number_error"
            app:layout_constraintVertical_bias="0.055"
            app:libIZO_clearIconTint="#8f1f15"
            app:libIZO_setBackgroundColor="@color/button_background"
            app:libIZO_setBorderColor="@color/button_background"
            app:libIZO_setBorderColorError="@color/enter_button_background"
            app:libIZO_setBorderView="true"
            app:libIZO_setCornerRadius="25dp"
            app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
            app:libIZO_setStrokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_password_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/password"
            android:textColor="@color/enter_button_background"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_password" />
        <!-- Confirm Password block -->

        <kz.topsecurity.client.ui_widgets.roundCorneredEditText.RoundCorneredEditText
            android:id="@+id/ed_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Повторите пароль *"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#EFEFEF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_password_error"
            app:layout_constraintVertical_bias="0.07"
            app:libIZO_clearIconTint="#8f1f15"
            app:libIZO_setBackgroundColor="@color/button_background"
            app:libIZO_setBorderColor="@color/button_background"
            app:libIZO_setBorderColorError="@color/enter_button_background"
            app:libIZO_setBorderView="true"
            app:libIZO_setCornerRadius="25dp"
            app:libIZO_setFocusedDrawable="@drawable/edittext_line_background"
            app:libIZO_setStrokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_confirm_password_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/confirm_password"
            android:textColor="@color/enter_button_background"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_confirm_password" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/login_button_background"
            android:text="Зарегистрироваться"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkAgree" />

        <CheckBox
            android:id="@+id/checkAgree"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_checkbox_back"
            android:button="@null"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password_error" />

        <TextView
            android:id="@+id/infText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Я соглашаюсь с условиями пользовательского  соглашения"
            android:textColor="#fff"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/checkAgree"
            app:layout_constraintTop_toTopOf="@+id/checkAgree" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>