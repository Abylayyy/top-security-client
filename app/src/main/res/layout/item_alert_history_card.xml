<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@drawable/round_cornered_red_bg">
    <ImageView
        android:id="@+id/iv_map"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/center_view1"
                android:layout_toStartOf="@id/center_view1"
                android:gravity="left"
                android:text="@string/alert_time"/>
            <View
                android:layout_centerVertical="true"
                android:id="@+id/center_view1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_alert_time"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/center_view1"
                android:layout_toEndOf="@id/center_view1"
                android:gravity="right" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/center_view2"
                android:layout_toStartOf="@id/center_view2"
                android:gravity="left"
                android:text="@string/place"/>
            <View
                android:layout_centerVertical="true"
                android:id="@+id/center_view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/center_view2"
                android:layout_toEndOf="@id/center_view2"
                android:gravity="right" />
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/center_view4"
                android:layout_toStartOf="@id/center_view4"
                android:gravity="left"
                android:text="@string/charge_level"/>
            <View
                android:layout_centerVertical="true"
                android:id="@+id/center_view4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_charge_level"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/center_view4"
                android:layout_toEndOf="@id/center_view4"
                android:gravity="right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>